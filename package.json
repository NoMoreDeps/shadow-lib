{
  "name"       : "shadow-lib"                                 ,
  "version"    : "1.0.0"                                      ,
  "main"       : "index.js"                                   ,
  "repository" : "https://github.com/fskorzec/shadow-lib.git" ,
  "author"     : "Skorzec francois <fskorzec@outlook.com>"    ,
  "license"    : "MIT"                                        ,
  "devDependencies": {
    "ts-jest"     : "^23.10.4" ,
    "@types/jest" : "^23.3.9"  ,
    "jest"        : "^23.6.0"  ,
    "typescript": "^3.1.6"
  },
  "scripts": {
    "test" : "jest --coverage"          
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/__tests__/Tests/.*$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
